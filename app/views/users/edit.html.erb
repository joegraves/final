<h1>Edit Profile</h1>

<% the_user = User.read(params["id"]) %>

<div class="row">
  <div class="col-md-5">

    <%= form_tag "/users/#{the_user['id']}", "method" => "patch"  %>

      <div class="form-group">
        <%= label_tag "first_name", "First Name" %>
        <%= text_field_tag "first_name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "last_name", "Last Name" %>
        <%= text_field_tag "last_name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "email", "Email" %>
        <%= text_field_tag "email", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "password", "Password" %>
        <%= password_field_tag "password", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "zip_code", "Zip Code" %>
        <%= text_field_tag "zip_code", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "sex", "Sex" %>
        <%= text_field_tag "sex", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "birth_year", "Birth Year" %>
        <%= text_field_tag "birth_year", "", "class" => "form-control" %>
      </div>

      <%= submit_tag "Save Changes", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/" %>

    </form>
  </div>
</div>
