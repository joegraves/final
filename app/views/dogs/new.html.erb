<h1>Add a New Dog</h1>

<div class="row">
  <div class="col-md-5">

    <p><%= @message %></p>

    <%= form_tag "/dogs", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "name", "Name" %>
        <%= text_field_tag "name", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "sex", "Sex" %>
        <%= text_field_tag "sex", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "weight", "Weight" %>
        <%= text_field_tag "weight", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "birth_year", "Birth Year" %>
        <%= text_field_tag "birth_year", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "breed", "Choose a Breed:" %>
        <%= select_tag "breed", options_from_collection_for_select(Breed.read.order("breed"),"id","breed"), "class" => "form-control" %>
      </div>

      <%= submit_tag "Submit", "class" => "btn btn-lg btn-success" %> or <%= link_to "Cancel", "/" %>

    </form>
</div>
</div>
